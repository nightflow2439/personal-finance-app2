generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Record {
  id         Int        @id @default(autoincrement())
  date       DateTime   @default(now())
  amount     Float
  type       RecordType
  note       String?
  categories Json?
}

enum RecordType {
  income
  expense
}
